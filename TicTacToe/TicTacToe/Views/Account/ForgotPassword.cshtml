@model TicTacToe.Models.ResetPasswordModel
@{
    ViewData["Title"] = "Forgot Pasword";
}

<div class="form-gap"></div>
<div class="container">
    <div class="row">
        <div class="row-cols-md-4 offset-md-4">
            <div class="card bg-info">
                <div class="card-body">
                    <div class="text-center">
                        <h3><i class="glyphicon glyphicon-lock"></i></h3>
                        <h2 class="text-center">Forgot Password?</h2>
                        <p>You can reset your password here.</p>
                        <div class="card-body">
                            <form id="register-form" role="form" autocomplete="off" method="post" asp-controller="Account" asp-action="SendResetPassword">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-prepend">
                                            <i class="glyphicon glyphicon-envelope color-blue"></i>
                                        </span>
                                        <input asp-for="UserName" placeholder="email address" class="form-control" type="email" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input name="recoversubmit" class="btn btn-lg btn-primary btn-block" value="Reset Password" type="submit" />
                                </div>
                                <input type="hidden" class="hide" asp-for="Token" value="" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>