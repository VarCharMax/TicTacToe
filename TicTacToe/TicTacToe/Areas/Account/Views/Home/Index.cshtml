@inject Microsoft.AspNetCore.Identity.UserManager<TicTacToe.Models.UserModel> UserManager
@model TicTacToe.Models.UserModel

@{ var isTwoFactor = UserManager.GetTwoFactorEnabledAsync(Model).Result; }

<h3>Account Details</h3>
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="card">
                <div class="row">
                    <div class="col-sm-6 col-md-4">
                        <Gravatar email="@Model.Email"></Gravatar>
                    </div>
                    <div class="col-sm-6 col-md-8">
                        <h4>@($"{Model.FirstName} {Model.LastName}")</h4>
                        <p>
                            <i class="glyphicon glyphicon-envelope"></i>&nbsp;
                            <a href="mailto:@Model.Email">@Model.Email</a>
                        </p>
                        <p>
                            <i class="glyphicon glyphicon-star"></i>&nbsp;
                            @Model.Score
                        </p>
                        <p>
                            <i class="glyphicon glyphicon-calendar">
                            </i>&nbsp;@Model.EmailConfirmationDate
                        </p>
                        <p>
                            <i class="glyphicon glyphicon-check"></i>
                            <text>Two Factor Authentication</text>
                            @if (Model.TwoFactorEnabled == true)
                            {
                                <a asp-area="Account" asp-controller="Home" asp-action="DisableTwoFactor">Disable</a>
                            }
                            else
                            {
                                <a asp-area="Account" asp-controller="Home" asp-action="EnableTwoFactor">Enable</a>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>